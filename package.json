{
  "name": "nodejs-cli-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate to create nodejs cli applications, very simple but includes everything from command line to testing",
  "main": "./lib/index.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "build": "tsc -p .",
    "lint": "eslint . --ext .ts",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trendycoding/nodejs-cli-boilerplate.git"
  },
  "author": "Yoel Martinez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trendycoding/nodejs-cli-boilerplate/issues"
  },
  "homepage": "https://github.com/trendycoding/nodejs-cli-boilerplate#readme",
  "devDependencies": {
    "@types/node": "^18.7.16",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^9.4.0",
    "figlet": "^1.5.2",
    "path": "^0.12.7",
    "yargs": "^17.5.1"
  }
}